{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "packages/share/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "paths": {
      "@share/*": [
        "./packages/share/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
    }
  }
}
